<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#00BCD4" />
            <stroke
                android:width="1dp"
                android:color="#00BCD4" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#00BCD4"
                android:endColor="#00BCD4"
                android:angle="270" />
            <stroke
                android:width="5dp"
                android:color="#4aa5d4" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>